{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsx ./scripts/build.ts",
    "watch": "tsx ./scripts/watch.ts",
    "dev:weapp": "pnpm --filter antd-taro-demo dev:weapp",
    "start:weapp": "npm-run-all --parallel watch dev:weapp",
    "clean": "rimraf node_modules && pnpm --filter './packages/**' clean",
    "eslint": "eslint packages/ --ext .ts,.tsx --fix",
    "preinstall": "npx only-allow pnpm",
    "lint": "npm run eslint && npm run stylelint",
    "prepare": "husky install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "stylelint": "stylelint 'src/**/*.css' 'packages/**/*.less' --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css, less}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitejs/plugin-react": "^2.0.1",
    "@vitest/ui": "^0.22.0",
    "chokidar": "^3.5.3",
    "del": "^7.0.0",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-alloy": "^4.6.2",
    "eslint-plugin-react": "^7.30.1",
    "fast-glob": "^3.2.11",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.10.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-standard": "^27.0.0",
    "tsx": "^3.8.2",
    "typescript": "^4.7.4",
    "vite": "^3.0.8",
    "vitest": "^0.22.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
