{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsx ./scripts/build.ts",
    "clean": "rimraf node_modules && pnpm --filter './packages/**' clean",
    "eslint": "eslint packages/ --ext .ts,.tsx --fix",
    "preinstall": "npx only-allow pnpm",
    "lint": "npm run eslint && npm run stylelint",
    "prepare": "husky install",
    "stylelint": "stylelint 'src/**/*.css' 'packages/**/*.less' --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css, less}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "del": "^7.0.0",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-alloy": "^4.6.2",
    "eslint-plugin-react": "^7.30.1",
    "fast-glob": "^3.2.11",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.3",
    "prettier-plugin-packagejson": "^2.2.18",
    "rimraf": "^3.0.2",
    "stylelint": "^14.10.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-standard": "^27.0.0",
    "tsx": "^3.8.2",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
